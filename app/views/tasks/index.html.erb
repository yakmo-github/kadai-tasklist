<% if logged_in? %>
  <h1>タスク一覧</h1>

   <ul>
    <% @tasks.each do |task| %>
     <li><%= link_to task.id, task %> : <%= task.status %> &gt; <%= task.content %></li>
     <% end %>
   </ul>

  <%= link_to '新規タスクの投稿', new_task_path %>
  <a href=#>ログアウト</a>
  <%= link_to 'ユーザ登録（テスト用）', signup_path %>
  <%= link_to 'ログイン画面（テスト用）', login_path %>
<% else %>
  <% redirect_to login_path %>
<% end %>